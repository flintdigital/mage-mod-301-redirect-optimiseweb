<config>

    <modules>
        <Optimiseweb_Redirects>
            <version>0.3.2</version>
        </Optimiseweb_Redirects>
    </modules>

    <frontend>
        
        <translate>
            <modules>
                <Optimiseweb_Redirects>
                    <files>
                        <default>Optimiseweb_Redirects.csv</default>
                    </files>
                </Optimiseweb_Redirects>
            </modules>
        </translate>
        
    </frontend>

    <adminhtml>

        <translate>
            <modules>
                <Optimiseweb_Redirects>
                    <files>
                        <default>Optimiseweb_Redirects.csv</default>
                    </files>
                </Optimiseweb_Redirects>
            </modules>
        </translate>
        
    </adminhtml>

    <global>

        <blocks>
            <ow_redirects>
                <class>Optimiseweb_Redirects_Block</class>
            </ow_redirects>
        </blocks>

        <helpers>
            <ow_redirects>
                <class>Optimiseweb_Redirects_Helper</class>
            </ow_redirects>
        </helpers>

        <models>
            <ow_redirects>
                <class>Optimiseweb_Redirects_Model</class>
            </ow_redirects>
        </models>
        
        <events>
            <controller_action_predispatch>
                <observers>
                    <optimiseweb_redirects_model_redirector>
                        <type>singleton</type>
                        <class>ow_redirects/redirector</class>
                        <method>doRedirects</method>
                    </optimiseweb_redirects_model_redirector>
                </observers>
            </controller_action_predispatch>
        </events>

    </global>

    <default>

        <optimisewebredirects>
            <disabled_products>
                <enabled>0</enabled>
            </disabled_products>
            <redirects1>
                <delimiter>,</delimiter>
                <wildcardcharacter>*</wildcardcharacter>
            </redirects1>
            <querystring>
                <delimiter>,</delimiter>
                <wildcardcharacter>*</wildcardcharacter>
            </querystring>
            <cataloguesearch>
                <enabled>0</enabled>
            </cataloguesearch>
            <menu>
                <optimiseweball_enabled>1</optimiseweball_enabled>
                <ow_redirects_enabled>1</ow_redirects_enabled>
            </menu>
        </optimisewebredirects>

    </default>
    
</config>